file = {:Users/willwaalkes/Library/Application Support/Mendeley Desktop/Downloaded/Wood et al. - 2005 - Stellar Ly$\alpha$ Emission Lines in the Hubble Space Telescope Archive Intrinsic Line Fluxes and Absorption from the Hel.pdf:pdf},
keywords = {ISM — ultraviolet,Subject headings,chromospheres — stars,circumstellar matter — ISM,outflows — ultraviolet,stars,structure — stars,winds},
