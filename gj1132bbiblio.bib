eprint = {1604.01032},
file = {:Users/willwaalkes/Library/Application Support/Mendeley Desktop/Downloaded/Youngblood et al. - 2016 - The MUSCLES Treasury Survey II Intrinsic Lyman Alpha and Extreme Ultraviolet Spectra of K and M Dwarfs with E.pdf:pdf},
