doi = {10.1051/0004-6361/201630238},
file = {:Users/willwaalkes/Library/Application Support/Mendeley Desktop/Downloaded/Bourrier et al. - 2017 - Reconnaissance of the TRAPPIST-1 exoplanet system in the Lyman- i$\alpha$i line.pdf:pdf},
issn = {0004-6361},
journal = {Astronomy {\&} Astrophysics},
keywords = {planetary systems,stars: individual: TRAPPIST-1,techniques: spectroscopic},
